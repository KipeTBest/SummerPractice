<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pink"
    tools:context=".MainFragment">

    <Button
        android:id="@+id/btn_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Music"
        android:layout_margin="40dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btn_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="News"
        android:layout_margin="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_music" />

    <Button
        android:id="@+id/btn_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video"
        android:layout_margin="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_news" />

    <Button
        android:id="@+id/btn_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="friend"
        android:layout_margin="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_video" />

    <Button
        android:id="@+id/btn_clip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clips"
        android:layout_margin="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_friend" />



</androidx.constraintlayout.widget.ConstraintLayout>